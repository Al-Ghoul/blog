          {
            src: "/projects-preview-videos/real-estate-rn/output-8.webm",
          },
        ]}
        title="RealEstate Mobile App"
        desc="A real state cross-platform Mobile Application for posting & listing properties."
        badges={[
          "ReactNative",
          "Typescript",
          "Expo",
          "React Query",
          "Zustand",
          "API Integration",
        ]}
        target="_self"
      />

      <ProjectCard
        mediaItems={[
          {
            src: "/projects-preview-images/e-commerce-rn/cover.gif",
          },
          {
