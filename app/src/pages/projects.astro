---
import MainGridLayout from "../layouts/MainGridLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import { i18n } from "../i18n/translation";
import I18nKey from "../i18n/i18nKey";
---

<MainGridLayout
  title={i18n(I18nKey.projects)}
  description={i18n(I18nKey.projects)}
>
  <div
    class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32"
  >
    <div class="card-base z-10 px-9 py-6 relative w-full">
      <h1 class="text-3xl font-bold text-black dark:text-white">Projects</h1>

      <ProjectCard
        mediaItems={[
          {
            src: "/projects-preview-images/real-estate-api/cover.png",
          },
        ]}
        title="RealEstate API"
        desc="This is the back-end for RealEstate-App."
        badges={[
          "ExpressJS",
          "Typescript",
          "Bun",
          "JWT",
          "WebSocket",
          "Drizzle",
          "Redis",
          "PostgreSQL",
          "Docker",
          "REST API",
        ]}
        target="_self"
      />

      <ProjectCard
        mediaItems={[
          {
            src: "/projects-preview-videos/real-estate-rn/output-1.webm",
            poster: "/projects-preview-videos/real-estate-rn/cover.gif",
          },
          {
            src: "/projects-preview-videos/real-estate-rn/output-2.webm",
          },
          {
